<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema claro -->
    <style name="Theme.QuackPlayer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:colorPrimary">@color/quack_blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="android:colorSecondary">@color/quack_pink</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar Color -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/quack_blue</item>
        <!-- Cor do fundo -->
        <item name="backgroundColor">@color/white</item>
        <!-- Cor do texto, aplicada automaticamente -->
        <item name="android:textColor">@color/black</item>
    </style>
</resources>