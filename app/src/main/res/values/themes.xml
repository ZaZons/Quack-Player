<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema claro -->
    <style name="Theme.QuackPlayer" parent="Theme.MaterialComponents.DayNight">
        <!-- Cor primária -->
        <item name="android:colorPrimary">@color/quack_blue</item>
        <!-- Cor secundária -->
        <item name="android:colorSecondary">@color/quack_pink</item>
        <!-- Cor do fundo -->
        <item name="android:colorBackground">@color/white</item>
        <!-- Cor do texto, aplicada automaticamente -->
        <item name="android:textColor">@color/black</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Action bar color -->
        <item name="actionBarStyle">@style/CustomActionBar</item>
    </style>
    <style name="CustomActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/white</item>
    </style>
</resources>

